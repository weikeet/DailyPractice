<resources>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4DFFFFFF</item>
    </style>

    <style name="MainToolbar" parent="Theme.DailyPractice">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <!--region MaterialButton Style-->

    <style name="AppWidget.MaterialButton.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppWidget.MaterialButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--endregion-->

</resources>
