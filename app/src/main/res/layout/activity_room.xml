<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_green_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_card_margin_horizontal"
        android:layout_marginTop="@dimen/main_card_margin_vertical"
        android:layout_marginEnd="@dimen/main_card_margin_horizontal"
        android:layout_marginBottom="@dimen/main_card_margin_vertical"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardElevation="@dimen/card_recycler_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_card_green_title"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_title_margin"
                android:layout_marginTop="@dimen/card_title_margin_top"
                android:layout_marginEnd="@dimen/card_title_margin"
                android:text="Room 实现CardData管理"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_room_add"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_card_green_title"
                android:text="增加"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btn_room_delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_card_green_title"
                android:layout_toEndOf="@id/btn_room_add"
                android:text="删除"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btn_room_update"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_card_green_title"
                android:layout_toEndOf="@id/btn_room_delete"
                android:text="修改"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btn_room_query"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_card_green_title"
                android:layout_toEndOf="@id/btn_room_update"
                android:text="查询"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_green_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/main_card_margin_horizontal"
        android:layout_marginTop="@dimen/main_card_margin_vertical"
        android:layout_marginEnd="@dimen/main_card_margin_horizontal"
        android:layout_marginBottom="@dimen/main_card_margin_vertical"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardElevation="@dimen/card_recycler_elevation">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_background" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
