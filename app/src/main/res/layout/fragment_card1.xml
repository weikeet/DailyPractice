<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btnTestRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#E91E63"
            android:padding="@dimen/btn_padding"
            android:text="@string/btn_test_room"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestActivityTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#9C27B0"
            android:padding="@dimen/btn_padding"
            android:text="测试ActivityTask Top"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#9C27B0"
            android:padding="@dimen/btn_padding"
            android:text="测试TabLayout"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestViewLifecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#3F51B5"
            android:padding="@dimen/btn_padding"
            android:text="测试View生周期"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestAsyncRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#009688"
            android:padding="@dimen/btn_padding"
            android:text="测试异步请求更新"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestGradientAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#4CAF50"
            android:padding="@dimen/btn_padding"
            android:text="测试渐变色动画"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestDialogWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#4CAF50"
            android:padding="@dimen/btn_padding"
            android:text="测试Dialog宽度"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestReflect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#FF9800"
            android:padding="@dimen/btn_padding"
            android:text="测试反射"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTestSDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#FF5722"
            android:padding="@dimen/btn_padding"
            android:text="测试Format"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnCleanAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#795548"
            android:padding="@dimen/btn_padding"
            android:text="测试清理动画"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:backgroundTint="#607D8B"
            android:padding="@dimen/btn_padding"
            android:text="测试ViewPager+Fragment"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
